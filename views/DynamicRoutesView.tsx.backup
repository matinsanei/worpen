import React, { useState, useEffect } from 'react';
import { TerminalFrame } from '../components/TerminalFrame';
import { Code, Play, Trash2, Download, Upload, Save, Copy, CheckCircle, XCircle } from 'lucide-react';

const API_BASE_URL = 'http://127.0.0.1:3000';

// Example route templates
const ROUTE_TEMPLATES = {
  simple: {
    name: "Simple Echo API",
    description: "Returns whatever you send",
    path: "/api/custom/echo",
    method: "POST",
    logic: [
      {
        "return": {
          "value": {
            "message": "Echo response",
            "received": "{{request.body}}"
          }
        }
      }
    ],
    parameters: [],
    enabled: true
  },
  database: {
    name: "User List from DB",
    description: "Query database and return users",
    path: "/api/custom/users",
    method: "GET",
    logic: [
      {
        "query_db": {
          "query": "SELECT * FROM agents LIMIT 10",
          "params": []
        }
      },
      {
        "return": {
          "value": {
            "users": "{{db_result}}"
          }
        }
      }
    ],
    parameters: [],
    enabled: true
  },
  conditional: {
    name: "Conditional Logic API",
    description: "Different responses based on condition",
    path: "/api/custom/check",
    method: "POST",
    logic: [
      {
        "set": {
          "var": "status",
          "value": "active"
        }
      },
      {
        "if": {
          "condition": "status == active",
          "then": [
            {
              "return": {
                "value": {
                  "status": "OK",
                  "message": "System is active"
                }
              }
            }
          ],
          "otherwise": [
            {
              "return": {
                "value": {
                  "status": "ERROR",
                  "message": "System is down"
                }
              }
            }
          ]
        }
      }
    ],
    parameters: [],
    enabled: true
  }
};

export const DynamicRoutesView: React.FC = () => {
  const [routes, setRoutes] = useState<any[]>([]);
  const [selectedRoute, setSelectedRoute] = useState<any | null>(null);
  const [jsonInput, setJsonInput] = useState('');
  const [testPayload, setTestPayload] = useState('{}');
  const [testResult, setTestResult] = useState<any>(null);
  const [stats, setStats] = useState<any>(null);
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState('');

  useEffect(() => {
    fetchRoutes();
    fetchStats();
  }, []);

  const fetchRoutes = async () => {
    try {
      const response = await fetch(`${API_BASE_URL}/api/v1/dynamic-routes`);
      const data = await response.json();
      setRoutes(data);
    } catch (err) {
      console.error('Failed to fetch routes:', err);
    }
  };

  const fetchStats = async () => {
    try {
      const response = await fetch(`${API_BASE_URL}/api/v1/dynamic-routes/stats`);
      const data = await response.json();
      setStats(data);
    } catch (err) {
      console.error('Failed to fetch stats:', err);
    }
  };

  const registerRoute = async () => {
    setLoading(true);
    setError('');
    try {
      const routeData = JSON.parse(jsonInput);
      const response = await fetch(`${API_BASE_URL}/api/v1/dynamic-routes`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          id: '',
          version: '1.0.0',
          created_by: 'admin',
          auth_required: false,
          rate_limit: null,
          response_schema: null,
          ...routeData
        })
      });
      
      const result = await response.json();
      if (response.ok) {
        alert('✅ Route registered successfully!');
        fetchRoutes();
        fetchStats();
        setJsonInput('');
      } else {
        setError(result.error || 'Failed to register route');
      }
    } catch (err: any) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  };

  const testRoute = async () => {
    if (!selectedRoute) return;
    
    setLoading(true);
    setError('');
    try {
      const payload = JSON.parse(testPayload);
      const response = await fetch(`${API_BASE_URL}/api/v1/dynamic-routes/test`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          route_id: selectedRoute.id,
          test_payload: payload,
          test_params: {}
        })
      });
      
      const result = await response.json();
      setTestResult(result);
    } catch (err: any) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  };

  const deleteRoute = async (id: string) => {
    if (!confirm('Are you sure you want to delete this route?')) return;
    
    try {
      const response = await fetch(`${API_BASE_URL}/api/v1/dynamic-routes/${id}`, {
        method: 'DELETE'
      });
      
      if (response.ok) {
        fetchRoutes();
        fetchStats();
        if (selectedRoute?.id === id) {
          setSelectedRoute(null);
        }
      }
    } catch (err) {
      console.error('Failed to delete route:', err);
    }
  };

  const loadTemplate = (template: any) => {
    setJsonInput(JSON.stringify(template, null, 2));
  };

  const exportRoute = (route: any) => {
    const dataStr = JSON.stringify(route, null, 2);
    const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
    const exportFileDefaultName = `route-${route.name.replace(/\s+/g, '-').toLowerCase()}.json`;
    
    const linkElement = document.createElement('a');
    linkElement.setAttribute('href', dataUri);
    linkElement.setAttribute('download', exportFileDefaultName);
    linkElement.click();
  };

  return (
    <div className="h-full p-6 flex flex-col gap-4 overflow-y-auto">
      {/* Header */}
      <div className="flex justify-between items-end border-b-2 border-green-800 pb-2">
        <div>
          <h1 className="text-2xl font-bold flex items-center gap-2">
            <Code className="text-green-400" /> 
            DYNAMIC_ROUTE_ENGINE
          </h1>
          <p className="text-xs text-green-600">JSON-DRIVEN API BUILDER // RUNTIME LOGIC EXECUTION</p>
        </div>
        <div className="flex gap-2 text-xs font-mono">
          {stats && (
            <>
              <div className="px-3 py-1 bg-green-900/30 border border-green-600">
                TOTAL: {stats.total_routes}
              </div>
              <div className="px-3 py-1 bg-blue-900/30 border border-blue-600">
                ENABLED: {stats.enabled_routes}
              </div>
            </>
          )}
        </div>
      </div>

      <div className="grid grid-cols-1 lg:grid-cols-2 gap-4 flex-1">
        {/* Left: Route Registration */}
        <div className="flex flex-col gap-4">
          <TerminalFrame title="REGISTER_NEW_ROUTE" className="flex-1 flex flex-col">
            <div className="flex gap-2 mb-3">
              <button
                onClick={() => loadTemplate(ROUTE_TEMPLATES.simple)}
                className="px-3 py-1 bg-green-900/30 border border-green-600 text-xs hover:bg-green-800"
              >
                SIMPLE
              </button>
              <button
                onClick={() => loadTemplate(ROUTE_TEMPLATES.database)}
                className="px-3 py-1 bg-blue-900/30 border border-blue-600 text-xs hover:bg-blue-800"
              >
                DATABASE
              </button>
              <button
                onClick={() => loadTemplate(ROUTE_TEMPLATES.conditional)}
                className="px-3 py-1 bg-purple-900/30 border border-purple-600 text-xs hover:bg-purple-800"
              >
                CONDITIONAL
              </button>
            </div>

            <textarea
              value={jsonInput}
              onChange={(e) => setJsonInput(e.target.value)}
              placeholder='{"name": "My API", "path": "/api/custom/test", "method": "GET", "logic": [{"return": {"value": {"message": "Hello"}}}], "enabled": true}'
              className="flex-1 bg-black/50 border border-green-800 text-green-400 p-3 font-mono text-xs resize-none"
            />

            {error && (
              <div className="mt-2 p-2 bg-red-900/20 border border-red-600 text-red-400 text-xs">
                ⚠ {error}
              </div>
            )}

            <button
              onClick={registerRoute}
              disabled={loading || !jsonInput}
              className="mt-3 w-full px-4 py-2 bg-green-600 hover:bg-green-500 disabled:bg-gray-600 disabled:cursor-not-allowed text-white font-bold flex items-center justify-center gap-2"
            >
              <Save size={16} />
              {loading ? 'REGISTERING...' : 'REGISTER_ROUTE'}
            </button>
          </TerminalFrame>

          {/* Route List */}
          <TerminalFrame title="REGISTERED_ROUTES" className="max-h-96 overflow-y-auto">
            {routes.length === 0 ? (
              <div className="text-gray-500 text-sm text-center py-8">
                No routes registered yet
              </div>
            ) : (
              <div className="space-y-2">
                {routes.map((route) => (
                  <div
                    key={route.id}
                    onClick={() => setSelectedRoute(route)}
                    className={`
                      p-3 border cursor-pointer transition-all
                      ${selectedRoute?.id === route.id 
                        ? 'border-green-500 bg-green-900/20' 
                        : 'border-green-900 hover:border-green-700 hover:bg-green-900/10'
                      }
                    `}
                  >
                    <div className="flex justify-between items-start">
                      <div className="flex-1">
                        <div className="font-bold text-white text-sm">{route.name}</div>
                        <div className="text-gray-400 text-xs mt-1">{route.description}</div>
                        <div className="flex gap-3 mt-2 text-xs">
                          <span className="text-yellow-400">{route.method}</span>
                          <span className="text-gray-500">{route.path}</span>
                        </div>
                      </div>
                      <div className="flex gap-1">
                        <button
                          onClick={(e) => {
                            e.stopPropagation();
                            exportRoute(route);
                          }}
                          className="p-1 hover:bg-blue-500/20 text-blue-400"
                          title="Export"
                        >
                          <Download size={14} />
                        </button>
                        <button
                          onClick={(e) => {
                            e.stopPropagation();
                            deleteRoute(route.id);
                          }}
                          className="p-1 hover:bg-red-500/20 text-red-400"
                          title="Delete"
                        >
                          <Trash2 size={14} />
                        </button>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            )}
          </TerminalFrame>
        </div>

        {/* Right: Route Testing */}
        <div className="flex flex-col gap-4">
          {selectedRoute ? (
            <>
              <TerminalFrame title="ROUTE_DETAILS" className="flex-shrink-0">
                <div className="space-y-2 text-xs font-mono">
                  <div><span className="text-gray-500">ID:</span> <span className="text-yellow-300">{selectedRoute.id}</span></div>
                  <div><span className="text-gray-500">PATH:</span> <span className="text-green-400">{selectedRoute.path}</span></div>
                  <div><span className="text-gray-500">METHOD:</span> <span className="text-blue-400">{selectedRoute.method}</span></div>
                  <div><span className="text-gray-500">VERSION:</span> <span className="text-white">{selectedRoute.version}</span></div>
                  <div>
                    <span className="text-gray-500">STATUS:</span> 
                    <span className={selectedRoute.enabled ? 'text-green-400' : 'text-red-400'}>
                      {selectedRoute.enabled ? ' ENABLED' : ' DISABLED'}
                    </span>
                  </div>
                </div>

                <div className="mt-4">
                  <div className="text-gray-500 text-xs mb-2">LOGIC_OPERATIONS:</div>
                  <pre className="bg-black/50 border border-green-900 p-2 text-[10px] overflow-x-auto">
                    {JSON.stringify(selectedRoute.logic, null, 2)}
                  </pre>
                </div>
              </TerminalFrame>

              <TerminalFrame title="TEST_ROUTE" className="flex-1 flex flex-col">
                <div className="text-xs text-gray-500 mb-2">TEST_PAYLOAD (JSON):</div>
                <textarea
                  value={testPayload}
                  onChange={(e) => setTestPayload(e.target.value)}
                  className="h-32 bg-black/50 border border-green-800 text-green-400 p-2 font-mono text-xs resize-none"
                />

                <button
                  onClick={testRoute}
                  disabled={loading}
                  className="mt-3 px-4 py-2 bg-blue-600 hover:bg-blue-500 disabled:bg-gray-600 text-white font-bold flex items-center justify-center gap-2"
                >
                  <Play size={16} />
                  {loading ? 'TESTING...' : 'RUN_TEST'}
                </button>

                {testResult && (
                  <div className="mt-4 flex-1 overflow-y-auto">
                    <div className={`flex items-center gap-2 mb-2 ${testResult.success ? 'text-green-400' : 'text-red-400'}`}>
                      {testResult.success ? <CheckCircle size={16} /> : <XCircle size={16} />}
                      <span className="font-bold text-sm">
                        {testResult.success ? 'TEST_PASSED' : 'TEST_FAILED'}
                      </span>
                      <span className="text-gray-500 text-xs">({testResult.execution_time_ms}ms)</span>
                    </div>

                    {testResult.result && (
                      <>
                        <div className="text-gray-500 text-xs mb-1">RESULT:</div>
                        <pre className="bg-black/50 border border-green-900 p-2 text-[10px] mb-3 overflow-x-auto">
                          {JSON.stringify(testResult.result, null, 2)}
                        </pre>
                      </>
                    )}

                    {testResult.error && (
                      <>
                        <div className="text-red-500 text-xs mb-1">ERROR:</div>
                        <pre className="bg-red-900/20 border border-red-600 p-2 text-red-400 text-[10px] mb-3">
                          {testResult.error}
                        </pre>
                      </>
                    )}

                    <div className="text-gray-500 text-xs mb-1">EXECUTION_STEPS:</div>
                    <div className="bg-black/50 border border-green-900 p-2 text-[10px] space-y-1">
                      {testResult.steps_executed.map((step: string, idx: number) => (
                        <div key={idx} className="text-gray-400">
                          [{idx + 1}] {step}
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </TerminalFrame>
            </>
          ) : (
            <div className="flex-1 flex items-center justify-center text-gray-500 text-sm border border-green-900/30 rounded">
              ← Select a route to test
            </div>
          )}
        </div>
      </div>
    </div>
  );
};
