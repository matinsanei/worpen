{
  "name": "TicTacToe Game API",
  "description": "A simple TicTacToe game - make a move and get game state",
  "path": "/api/game/tictactoe",
  "method": "POST",
  "parameters": [
    {
      "name": "position",
      "param_type": "body",
      "data_type": "number",
      "required": true,
      "validation": "0-8"
    },
    {
      "name": "player",
      "param_type": "body",
      "data_type": "string",
      "required": true,
      "validation": "X or O"
    }
  ],
  "logic": [
    {
      "set": {
        "var": "board",
        "value": ["_", "_", "_", "_", "_", "_", "_", "_", "_"]
      }
    },
    {
      "set": {
        "var": "winning_patterns",
        "value": [
          [0, 1, 2],
          [3, 4, 5],
          [6, 7, 8],
          [0, 3, 6],
          [1, 4, 7],
          [2, 5, 8],
          [0, 4, 8],
          [2, 4, 6]
        ]
      }
    },
    {
      "set": {
        "var": "game_html",
        "value": "<!DOCTYPE html><html><head><meta charset='UTF-8'><title>TicTacToe</title><style>body{font-family:Arial;display:flex;justify-content:center;align-items:center;min-height:100vh;margin:0;background:linear-gradient(135deg,#667eea 0%,#764ba2 100%)}.game-container{background:white;padding:30px;border-radius:20px;box-shadow:0 20px 60px rgba(0,0,0,0.3)}.board{display:grid;grid-template-columns:repeat(3,100px);gap:10px;margin:20px 0}.cell{width:100px;height:100px;background:#f0f0f0;border:3px solid #667eea;border-radius:10px;font-size:48px;font-weight:bold;display:flex;align-items:center;justify-content:center;cursor:pointer;transition:all 0.3s}.cell:hover{background:#667eea;color:white;transform:scale(1.05)}.cell.X{color:#667eea}.cell.O{color:#764ba2}h1{color:#667eea;margin:0 0 10px 0;text-align:center}.info{text-align:center;color:#666;margin:10px 0;font-size:18px}.reset-btn{width:100%;padding:15px;background:#667eea;color:white;border:none;border-radius:10px;font-size:16px;font-weight:bold;cursor:pointer;margin-top:10px}.reset-btn:hover{background:#764ba2}</style></head><body><div class='game-container'><h1>üéÆ TicTacToe</h1><div class='info'>Player: <span id='player'>X</span></div><div class='board' id='board'></div><div class='info' id='status'>Your turn!</div><button class='reset-btn' onclick='resetGame()'>New Game</button></div><script>let board=['_','_','_','_','_','_','_','_','_'];let currentPlayer='X';const winPatterns=[[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];function renderBoard(){const boardEl=document.getElementById('board');boardEl.innerHTML='';board.forEach((cell,index)=>{const cellEl=document.createElement('div');cellEl.className='cell '+(cell!=='_'?cell:'');cellEl.textContent=cell!=='_'?cell:'';cellEl.onclick=()=>makeMove(index);boardEl.appendChild(cellEl)})}function makeMove(pos){if(board[pos]!=='_')return;fetch('/api/game/tictactoe',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({position:pos,player:currentPlayer})}).then(r=>r.json()).then(data=>{board[data.board];document.getElementById('status').textContent=data.message;if(data.winner){document.getElementById('status').innerHTML='üéâ '+data.winner+' Wins!';return}if(data.draw){document.getElementById('status').innerHTML='ü§ù Draw!';return}currentPlayer=currentPlayer==='X'?'O':'X';document.getElementById('player').textContent=currentPlayer;renderBoard()})}function checkWinner(){for(let pattern of winPatterns){const[a,b,c]=pattern;if(board[a]!=='_'&&board[a]===board[b]&&board[a]===board[c]){return board[a]}}if(!board.includes('_'))return 'Draw';return null}function resetGame(){board=['_','_','_','_','_','_','_','_','_'];currentPlayer='X';document.getElementById('player').textContent='X';document.getElementById('status').textContent='Your turn!';renderBoard()}renderBoard()</script></body></html>"
      }
    },
    {
      "return": {
        "value": {
          "board": "{{board}}",
          "player": "X",
          "position": 0,
          "message": "Game started! Make your move.",
          "html": "{{game_html}}",
          "winner": null,
          "draw": false,
          "game_active": true
        }
      }
    }
  ],
  "enabled": true,
  "version": "1.0.0",
  "auth_required": false,
  "rate_limit": null
}